<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Dunjin.ReportsMaster"
    BackgroundImageSource="parchment2.jpg">
    <ContentPage.Content>        
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand"
                     WidthRequest="300">
            <Label Text="REPORTS"
                   TextColor="DarkRed"
                   FontSize="Title"
                   HorizontalOptions="Center"
                   Margin="0,0,0,50"/>
            <Button Text="Highest Initiative Roll"
                    BackgroundColor="DarkRed"
                    TextColor="Tan"/>
            <Button Text="Highest Overall Roll"
                    BackgroundColor="DarkRed"
                    TextColor="Tan"
                    Margin="0,15,0,15"/>
            <Button Text="Highest Weapon Damage Roll"
                    BackgroundColor="DarkRed"
                    TextColor="Tan"
                    Margin="0,0,0,15"/>
            <Button Text="Most Overall Weapon Damage"
                    BackgroundColor="DarkRed"
                    TextColor="Tan"
                    Margin="0,0,0,15"/>
            <Button Text="Most Rolls"
                    BackgroundColor="DarkRed"
                    TextColor="Tan"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
